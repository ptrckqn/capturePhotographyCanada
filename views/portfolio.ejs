<% include partials/header %>

<% var imageArray = [] %>
<% var imagePublicID = [] %>
<% images.forEach(function(images){ %>
  <% imageArray.push(images.path) %>
  <% imagePublicID.push(images.public_id) %>
  <% }); %>

  <h2>My Work</h2>
  <hr>
  <div class="row">
    <div class="column">
      <% for(var i = imageArray.length - 1; i >= 0; i -= 3){ %>
        <img src="<%=imageArray[i]%>" class="scrollReveal">
        <% if(currentUser){ %>
          <form class="" action="/portfolio?_method=DELETE&id=<%=imagePublicID[i]%>" method="POST">
            <input type="submit" class="deleteButton" value="Delete">
          </form>
        <% } %>
        <% } %>
      </div>
      <div class="column">
        <% for(var i = imageArray.length - 2; i >= 0; i -= 3){ %>
          <img src="<%=imageArray[i]%>" class="scrollReveal">
          <% if(currentUser){ %>
            <form class="" action="/portfolio?_method=DELETE&id=<%=imagePublicID[i]%>" method="POST">
              <input type="submit" class="deleteButton" value="Delete">
            </form>
          <% } %>
          <% } %>
        </div>
        <div class="column">
          <% for(var i = imageArray.length - 3; i >= 0; i -= 3){ %>
            <img src="<%=imageArray[i]%>" class="scrollReveal">
            <% if(currentUser){ %>
              <form class="" action="/portfolio?_method=DELETE&id=<%=imagePublicID[i]%>" method="POST">
                <input type="submit" class="deleteButton" value="Delete">
              </form>
            <% } %>
            <% } %>
          </div>
        </div>
<% include partials/footer %>
